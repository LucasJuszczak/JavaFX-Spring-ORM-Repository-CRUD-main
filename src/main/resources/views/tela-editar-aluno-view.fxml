<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controllers.TelaEditarAlunoController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label text="Editar Aluno" style="-fx-font-size: 20px;"/>

  <Label text="Informe o id do aluno que deseja editar:"/>
    <TextField fx:id="idAlunoTextField" promptText="Id do aluno" />

  <Button text="Buscar" onAction="#onBuscarAlunoButtonClick" />

  <Label text="Nome:"/>
  <TextField fx:id="nomeTextField" promptText="Nome do aluno" />

  <Label text="Email:"/>
  <TextField fx:id="emailTextField" promptText="Email do aluno" />

  <Button text="Salvar" onAction="#onSalvarButtonClick" />

  <Label fx:id="mensagemLabel" />

</VBox>